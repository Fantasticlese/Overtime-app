<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], time: 2000, title: "Overtime App Alert", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], time: 2000, title: "Overtime App Error", sticky: false, image: :success) %>
<% else %>
  <%= js add_gritter(flash[:notice], time: 2000, title: "Overtime App Notification", sticky: false, image: :success) %>
<% end %>